<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_list_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:textSize="@dimen/large_text_size"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message_list_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="@dimen/primary_text_size"
            app:layout_constraintTop_toBottomOf="@+id/message_list_name_tv" />

        <TextView
            android:id="@+id/message_list_otp_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:textSize="@dimen/primary_text_size"
            app:layout_constraintTop_toBottomOf="@+id/message_list_date_tv" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
